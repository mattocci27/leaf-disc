@article{Onoda2008,
  title = {Effects of Light and Nutrient Availability on Leaf Mechanical Properties of {{Plantago}} Major: {{A}} Conceptual Approach},
  author = {Onoda, Yusuke and Schieving, Feike and Anten, Niels P.R.},
  year = {2008},
  journal = {Annals of Botany},
  volume = {101},
