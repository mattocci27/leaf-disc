  isbn = {6503251521},
  pmid = {26044706},
  file = {/home/mattocci/Downloads/ecog-02006.pdf;/Users/mattocci/Dropbox/zotero_papers/Ecography/2017/Messier et al_2017_Ecography.pdf;/Users/mattocci/Dropbox/zotero_papers/Ecography/2017/Messier et al_2017_Ecography2.pdf}
}

@article{Mukai2016,
  title = {Soil-Nutrient Availability and the Nutrient-Use Efficiencies of Forests along an Altitudinal Gradient on {{Yakushima Island}}, {{Japan}}},
