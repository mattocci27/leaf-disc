BootStrap: docker
From: mattocci/myenv:4.1.2

%apprun R
  exec R "${@}"

%apprun Rscript
  exec Rscript "${@}"

%runscript
  exec R "${@}"

%post
    DEBIAN_FRONTEND=noninteractive

   installGithub.r \
      mattocci27/ggsma \
      zeehio/facetscales

   install2.r -n -1 --skipinstalled --error \
      --deps TRUE \
          egg \
          ggcorrplot \
          xlsx

   Rscript -e 'remotes::install_version("Rttf2pt1", version = "1.3.8")'

   Rscript -e 'extrafont::font_import'

